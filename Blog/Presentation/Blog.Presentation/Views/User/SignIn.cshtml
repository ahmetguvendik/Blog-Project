@using Blog.Application.ViewModels.User
@model VM_User_SignIn

<form asp-action="SignIn" asp-controller="User" method="post">

    <div class="mb-3">
        <label>
            UserName
        </label>
        <span class="text-danger" asp-validation-for=@Model.Username></span>
        <input type="text" asp-for=@Model.Username class=form-control />
    </div>

    <br />

    <div class="mb-3">
        <label>
            Password
        </label>
        <span class="text-danger" asp-validation-for=@Model.Password></span>
        <input type="password" asp-for=@Model.Password class=form-control />
    </div>

    <br />

    <div class="col-md-4">
        <button>
            Sign In
        </button>
    </div>

    <br />

    <div class="col-md-4">
        <a asp-action="ResetPasswordForEmail" asp-controller="User">Reset Password</a>
    </div>

    <div>
        @ViewBag.ErrorMessage
    </div>

</form>